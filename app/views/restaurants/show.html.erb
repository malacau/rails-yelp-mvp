<div class="card w-75 pt-40">
  <div class="card-body">
    <h2 class="card-title"><%= @restaurant.name %></h2>
    <p class="card-text"><%= @restaurant.address %></p>
    <p class="card-text"><%= @restaurant.phone_number %></p>
    <h3>Reviews :</h3>
    <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
            <li class="list-group-item"><%= review.rating %>/5 : <%= review.content %></li>
        <% end %>
    </ul>
    <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  </div>
</div>